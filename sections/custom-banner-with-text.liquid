{{- 'custom-banner-with-text.css' | asset_url | stylesheet_tag -}}
<script src="{{ 'custom-banner-with-text.js' | asset_url }}" defer="defer"></script>

<div class="custom-banner-section" id="custom-banner-{{ section.id }}">
  {% if section.blocks.size > 0 %}
    <div class="custom-banner-carousel">
      <div class="custom-banner-track" data-banner-track>
        {% for block in section.blocks %}
          {%- liquid
            assign justify_content = 'flex-start'
            assign align_items = 'flex-end'
            
            case block.settings.text_position
              when 'top-left'
                assign justify_content = 'flex-start'
                assign align_items = 'flex-start'
              when 'top-right'
                assign justify_content = 'flex-end'
                assign align_items = 'flex-start'
              when 'bottom-left'
                assign justify_content = 'flex-start'
                assign align_items = 'flex-end'
              when 'bottom-right'
                assign justify_content = 'flex-end'
                assign align_items = 'flex-end'
            endcase
          -%}
          <div class="custom-banner-slide" data-text-position="{{ block.settings.text_position }}" data-text-alignment="{{ block.settings.text_alignment }}" {{ block.shopify_attributes }}>
            <div class="custom-banner-container">
              {%- if block.settings.banner_image != blank -%}
                <div class="custom-banner-image">
                  {{ block.settings.banner_image | image_url: width: 1920 | image_tag:
                    loading: 'lazy',
                    widths: '375, 550, 750, 1100, 1500, 1920',
                    sizes: '100vw',
                    class: 'banner-img'
                  }}
                </div>
              {%- else -%}
                <div class="custom-banner-image custom-banner-placeholder">
                  {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {%- endif -%}
              
              <div class="custom-banner-content" style="justify-content: {{ justify_content }}; align-items: {{ align_items }};">
                <div class="custom-banner-text-wrapper" style="text-align: {{ block.settings.text_alignment }};">
                  {%- if block.settings.heading != blank -%}
                    <h2 class="custom-banner-heading" style="color: {{ block.settings.heading_color }};">{{ block.settings.heading }}</h2>
                  {%- endif -%}
                  
                  {%- if block.settings.description != blank -%}
                    <p class="custom-banner-description" style="color: {{ block.settings.description_color }};">{{ block.settings.description }}</p>
                  {%- endif -%}
                  
                  {%- if block.settings.button_text != blank -%}
                    <a href="{{ block.settings.button_link }}" class="custom-banner-button" style="--btn-bg: {{ block.settings.button_bg_color }}; --btn-color: {{ block.settings.button_text_color }};">
                      <span>{{ block.settings.button_text }}</span>
                      <span class="button-arrow">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <line x1="5" y1="12" x2="19" y2="12"></line>
                          <polyline points="12 5 19 12 12 19"></polyline>
                        </svg>
                      </span>
                    </a>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      
      {% if section.blocks.size > 1 %}
        <!-- Navigation Arrows -->
        <button class="custom-banner-nav custom-banner-prev" data-banner-prev aria-label="Previous slide">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="custom-banner-nav custom-banner-next" data-banner-next aria-label="Next slide">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
        
        <!-- Pagination Dots -->
        <div class="custom-banner-pagination" data-banner-pagination>
          {% for block in section.blocks %}
            <button class="pagination-dot{% if forloop.first %} active{% endif %}" data-slide-index="{{ forloop.index0 }}" aria-label="Go to slide {{ forloop.index }}"></button>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  {% endif %}
  
  {%- if section.settings.footer_text != blank -%}
    <div class="custom-banner-footer" style="background-color: {{ section.settings.footer_bg_color }}; color: {{ section.settings.footer_text_color }};">
      <p class="custom-banner-footer-text">{{ section.settings.footer_text }}</p>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Custom Banner with Text",
  "tag": "section",
  "class": "custom-banner-with-text-section",
  "settings": [
    {
      "type": "header",
      "content": "Footer Settings"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "color",
      "id": "footer_bg_color",
      "label": "Footer Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "footer_text_color",
      "label": "Footer Text Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Carousel Settings"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable Autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 2,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Autoplay Speed",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner Slide",
      "settings": [
        {
          "type": "header",
          "content": "Banner Image"
        },
        {
          "type": "image_picker",
          "id": "banner_image",
          "label": "Banner Image"
        },
        {
          "type": "header",
          "content": "Text Content"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "The Gift Guide"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
        },
        {
          "type": "header",
          "content": "Button Settings"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "SHOP NOW"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "color",
          "id": "button_bg_color",
          "label": "Button Background Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Button Text Color",
          "default": "#ffffff"
        },
        {
          "type": "header",
          "content": "Text Styling"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "description_color",
          "label": "Description Color",
          "default": "#333333"
        },
        {
          "type": "select",
          "id": "text_position",
          "label": "Text Position",
          "options": [
            {
              "value": "top-left",
              "label": "Top Left"
            },
            {
              "value": "top-right",
              "label": "Top Right"
            },
            {
              "value": "bottom-left",
              "label": "Bottom Left"
            },
            {
              "value": "bottom-right",
              "label": "Bottom Right"
            }
          ],
          "default": "bottom-left"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Banner with Text",
      "blocks": [
        {
          "type": "banner"
        }
      ]
    }
  ]
}
{% endschema %}